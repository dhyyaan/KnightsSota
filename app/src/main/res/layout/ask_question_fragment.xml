<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvAskAQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="16sp"
        android:textColor="#484848"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Ask a Question"
        android:typeface="normal" />
    <FrameLayout
        android:layout_below="@+id/tvAskAQuestion"
        android:id="@+id/proBartvAAQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp">
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal|center_vertical" />
    <com.rafakob.drawme.DrawMeEditText
        android:id="@+id/etAskAQuestion"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:inputType="textMultiLine"
        android:gravity="left"
        android:maxLines="5"
        app:dm_stroke="1dp"
        app:dm_radius="4dp"
        app:dm_strokeColor="#E1E1E1"/>
    </FrameLayout>
        <com.rafakob.drawme.DrawMeButton
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/proBartvAAQ"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="6dp"
            android:layout_gravity="right|end"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:text="Send"
            android:textAllCaps="true"
            android:textColor="#FEEE35"
            android:textSize="14sp"
            app:dm_backColor="#293787"
            app:dm_backColorDisabled="@android:color/white"
            app:dm_backColorPressed="@android:color/holo_red_dark"
            app:dm_shapeRadiusHalfHeight="true" />
</LinearLayout>
    </ScrollView>
</layout>
